<!--pages/register/register.wxml-->
<view class="registerBox">
  <van-cell-group>
    <van-field
      value="{{ username }}"
      required
      clearable
      label="用户名"
      icon="question-o"
      placeholder="请输入用户名"
      bind:click-icon="onClickIcon"
    />
    <van-field
      value="{{ username }}"
      required
      clearable
      label="手机号"
      icon="question-o"
      placeholder="请输入用户名"
      bind:click-icon="onClickIcon"
    />
    <van-field
      value="{{ username }}"
      required
      clearable
      label="邮箱"
      icon="question-o"
      placeholder="请输入用户名"
      bind:click-icon="onClickIcon"
    />
    <van-field
      value="{{ password }}"
      type="password"
      label="密码"
      placeholder="请输入密码"
      required
      border="{{ false }}"
    />
  </van-cell-group>
</view>